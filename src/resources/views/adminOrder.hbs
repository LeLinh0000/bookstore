  // Fetch data
  !async function() {
      const dataTable = document.getElementById("dataTable");

      let data = await fetch("http://localhost:3000/api/order")
        .then(response => response.json())
        .then(data => {
              return data;
          })
        .catch(error => {
          console.log(error);
        });


        let orderHTML = data.map((nd, index) => {
          var orderValue = 0;
          nd.Books.forEach((s, index) => {
            orderValue += parseInt(s.price * s.BookOrder.quantity);
          });
        return `
        <tr class="text-center">
          <td class="align-middle">${nd.orderId}</td>
          <td class="align-middle">${nd.Customer.customerName}</td>
          <td class="align-middle">${orderValue} vnđ</td>
          <td class="align-middle">${nd.createdAt}</td>
          
          <td class="project-actions text-right text-center align-middle">

            
